<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PPET" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PPET" parent="Base.Theme.PPET" />

    <style name="basic" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="basic.white" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="edit" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="radio" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="check" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
